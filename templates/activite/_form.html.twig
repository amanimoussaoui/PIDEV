{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="container">
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.type) }}
            {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.type) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.date) }}
            {{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.date) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.parcelle) }}
            {{ form_widget(form.parcelle, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.parcelle) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.culture) }}
            {{ form_widget(form.culture, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.culture) }}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
</div>

{{ form_end(form) }}
