{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation', 'method': 'POST'}}) }}

<div class="container">
    {# Display global form errors #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
     

        {# Description Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, { 
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'ex: Désherbage de la parcelle',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.description) }}
            <small class="form-text text-muted">Décrivez l'activité.</small>
        </div>

        {# Date Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, { 
                'attr': {
                    'class': 'form-control',
                    'type': 'date',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.date) }}
            <small class="form-text text-muted">Sélectionnez la date de l'activité.</small>
        </div>

        {# Type Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.type, 'Type d\'activité', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, { 
                'attr': {
                    'class': 'form-control',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.type) }}
            <small class="form-text text-muted">Sélectionnez le type d'activité.</small>
        </div>

  {# Culture Field #}
  <div class="col-md-6 mb-3">
    {{ form_label(form.culture, 'Culture', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.culture, { 
        'attr': {
            'class': 'form-control',
            'required': true,
        }
    }) }}
    {{ form_errors(form.culture) }}
    <small class="form-text text-muted">Sélectionnez la culture associée.</small>
</div>


    
    </div>

    {# Submit Button #}
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
</div>

{{ form_end(form) }}


{% block javascripts %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(event) {
            // Allow the form to submit; Symfony will handle validation
            form.classList.add('was-validated');
        });
    }
});

</script>



{% endblock %}