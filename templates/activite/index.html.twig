{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Activite Index{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Liste des Activités</h5>
                <a href="{{ path('app_activite_new') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Create New Activite
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover ">                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Culture</th>
                            <th>Parcelle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for activite in activites %}
                        <tr>
                            <td>{{ activite.id }}</td>
                            <td>{{ activite.description }}</td>
                            <td>{{ activite.type }}</td>
                            <td>{{ activite.date ? activite.date|date('Y-m-d') : '' }}</td>
                            <td>{{ activite.culture.nomCulture }}</td> <!-- Display culture name -->
                            <td>{{ activite.parcelle.nom }}</td> <!-- Display parcelle name -->
                            <td>
                                <a href="{{ path('app_activite_show', {'id': activite.id}) }}" class="btn btn-info btn-sm" role="button">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-warning btn-sm" role="button">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}