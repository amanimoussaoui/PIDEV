{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Activite{% endblock %}

{% block content %}
    <div class="container my-4">
        <h1 class="mb-4">Activite Details</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Activite Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ activite.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ activite.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Type</th>
                            <td>{{ activite.type }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>{{ activite.date ? activite.date|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_activite_index') }}" class="btn btn-secondary">Back to List</a>
                    <div class="d-flex">
                        <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div>
                            {{ include('activite/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}