{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="container">
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.nomCulture) }}
            {{ form_widget(form.nomCulture, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.nomCulture) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.dateSemis) }}
            {{ form_widget(form.dateSemis, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.dateSemis) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.duree) }}
            {{ form_widget(form.duree, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.duree) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.statut) }}
            {{ form_widget(form.statut, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.statut) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.parcelle) }}
            {{ form_widget(form.parcelle, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.parcelle) }}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
</div>

{{ form_end(form) }}
