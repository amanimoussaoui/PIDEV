{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

<div class="container">
    {# Display global form errors #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        {# Nom Culture Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.nomCulture, 'Nom de la culture', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomCulture, { 
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'ex: Blé',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.nomCulture) }}
            <small class="form-text text-muted">Le nom de la culture doit contenir entre 3 et 100 caractères.</small>
        </div>

        {# Date Semis Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.dateSemis, 'Date de semis', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateSemis, { 
                'attr': {
                    'class': 'form-control',
                    'type': 'date',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.dateSemis) }}
            <small class="form-text text-muted">Sélectionnez la date de semis.</small>
        </div>

        {# Durée Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.duree, 'Durée (en jours)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.duree, { 
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'ex: 120',
                    'type': 'number',
                    'min': '1',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.duree) }}
            <small class="form-text text-muted">La durée doit être un nombre entier supérieur à zéro.</small>
        </div>

        {# Statut Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.statut, { 
                'attr': {
                    'class': 'form-control',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.statut) }}
            <small class="form-text text-muted">Sélectionnez le statut de la culture.</small>
        </div>

        {# Parcelle Field #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.parcelle, 'Parcelle', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.parcelle, { 
                'attr': {
                    'class': 'form-control',
                    'required': true,
                }
            }) }}
            {{ form_errors(form.parcelle) }}
            <small class="form-text text-muted">Sélectionnez la parcelle concernée.</small>
        </div>
    </div>

    {# Submit Button #}
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ button_label|default('Sauvegarder') }}
        </button>
    </div>
</div>

{{ form_end(form) }}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(event) {
            // Allow the form to submit; Symfony will handle validation
            form.classList.add('was-validated');
        });
    }
});
</script>
{% endblock %}