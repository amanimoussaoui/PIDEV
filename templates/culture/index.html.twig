{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Culture Index{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Liste des Cultures</h5>
                <a href="{{ path('app_culture_new') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Create New Culture
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom Culture</th>
                            <th>Date Semis</th>
                            <th>Durée</th>
                            <th>Statut</th>
                            <th>Parcelle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for culture in cultures %}
                        <tr>
                            <td>{{ culture.id }}</td>
                            <td>{{ culture.nomCulture }}</td>
                            <td>{{ culture.dateSemis ? culture.dateSemis|date('Y-m-d') : '' }}</td>
                            <td>{{ culture.duree }}</td>
                            <td>{{ culture.statut | capitalize }}</td>
                            <td>{{ culture.parcelle.nom }}</td>
                            <td>
                                <a href="{{ path('app_culture_show', {'id': culture.id}) }}" class="btn btn-info btn-sm" role="button">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_culture_edit', {'id': culture.id}) }}" class="btn btn-warning btn-sm" role="button">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>                        
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
