
{% extends 'BackEnd/back.html.twig' %}

{% block title %}AgriWise | Qui sommes nous {% endblock %}



{% block content %} 
<style>
	/* Style global pour la page */
body {
font-family: Arial, sans-serif;
background-color: #f8f9fa;
margin: 0;
padding: 0;
}

/* Conteneur principal */
.container {
width: 80%;
max-width: 600px;
margin: 40px auto;
background: white;
padding: 20px;
box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
border-radius: 8px;
}

/* Style des labels */
label {
font-weight: bold;
display: block;
margin-top: 15px;
}

/* Style des champs de formulaire */
input[type="text"],
input[type="number"],
input[type="email"],
input[type="password"],
select {
width: 100%;
padding: 10px;
margin-top: 5px;
border: 1px solid #ccc;
border-radius: 5px;
font-size: 16px;
}

/* Effet focus sur les champs */
input:focus,
select:focus {
border-color: #007bff;
outline: none;
box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Style du bouton Ajouter */
button[type="submit"] {
background-color: #28a745; /* Vert Bootstrap */
color: white;
border: none;
padding: 10px 20px;
font-size: 16px;
border-radius: 5px;
cursor: pointer;
transition: background 0.3s ease, transform 0.2s;
display: block; /* Pour qu'il prenne toute la largeur du conteneur */
margin: 20px auto; /* Centrer */
}

button[type="submit"]:hover {
background-color: #218838; /* Vert plus fonc√© au survol */
transform: scale(1.05);
}

button[type="submit"]:focus {
outline: none;
box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
}

/* Style responsive */
@media screen and (max-width: 600px) {
.container {
width: 90%;
}
}
 </style>
                <div class="container mt-4">
                <h1>Ajouter une Formation</h1>
        
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
        
                    <div class="mb-3">
                        {{ form_label(form.prix) }}
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prix) }}
                    </div>
        
                    <div class="mb-3">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date) }}
                    </div>
        
                    <div class="mb-3">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.image) }}
                    </div>
        
                
                {{ form_end(form) }}
            </div>
            {% endblock %}