
{% extends 'FrontEnd/front.html.twig' %}

{% block title %}AgriWise | Qui sommes nous {% endblock %}

{% block content %}
<style>
	/* Bande centrale */
	.section-formations {
		background-color: #f8f9fa; /* Même couleur de fond que ton body */
		padding: 40px 0;
		text-align: center;
	}

	.section-formations h1 {
		background-color: #28a745; /* Vert Bootstrap */
		color: white;
		padding: 15px;
		border-radius: 8px;
		display: inline-block;
		margin-bottom: 30px;
	}

	.cards-container {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
		justify-content: center; /* Centrage des cartes */
		max-width: 80%;
		margin: auto; /* Centrer le bloc principal */
	}

	.card {
		width: 300px;
		border: 1px solid #ccc; /* Bordure adoucie */
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
		background: white;
	}

	.card:hover {
		transform: scale(1.05);
	}

	.card-img-top {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.card-body {
		padding: 15px;
		text-align: center;
	}

	.card-title {
		font-size: 1.25rem;
		font-weight: bold;
	}

	.card-price {
		color: #28a745; /* Vert Bootstrap */
		font-size: 1.1rem;
	}

	.card-description {
		margin-top: 10px;
		font-size: 0.9rem;
		color: #555;
	}

	.btn-primary {
		display: inline-block;
		margin-top: 10px;
		padding: 8px 12px;
		border-radius: 5px;
		background-color: #28a745; /* Vert Bootstrap */
		color: white;
		text-decoration: none;
		transition: background 0.3s ease, transform 0.2s;
	}

	.btn-primary:hover {
		background-color: #218838; /* Vert plus foncé */
		transform: scale(1.05);
	}
</style>
                <div class="section-formations">
                    <h1>Nos Formations</h1>
            
                    <div class="cards-container">
                        {% if formations is not empty %}
                            {% for formation in formations %}
                                <div class="card">
                                    <img src="{{ formation.image }}" alt="Image de la formation" class="card-img-top">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ formation.titre }}</h5>
                                        <p class="card-price"><strong> {{ formation.prix }} DT</strong></p>
                                        <p class="card-description">{{ formation.description }}</p>
                                        <a href="#" class="btn btn-primary">Participer</a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p>Aucune formation trouvée.</p>
                        {% endif %}
                    </div>
                </div>
                {% endblock %}

