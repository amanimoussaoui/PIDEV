{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Parcelles{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Liste des Parcelles</h5>
                <a href="{{ path('app_parcelle_new') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Create New Parcelle
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Superficie</th>
                            <th>Localisation</th>
                            <th>Type Sol</th>
                            <th>Utilisateur Id</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for parcelle in parcelles %}
                            <tr>
                                <td>{{ parcelle.id }}</td>
                                <td>{{ parcelle.nom }}</td>
                                <td>{{ parcelle.superficie }}</td>
                                <td>{{ parcelle.localisation }}</td>
                                <td>{{ parcelle.typeSol | capitalize }}</td> 
                                <td>{{ parcelle.utilisateurId }}</td>
                                <td>
                                    <a href="{{ path('app_parcelle_show', {'id': parcelle.id}) }}" class="btn btn-info btn-sm" role="button">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_parcelle_edit', {'id': parcelle.id}) }}" class="btn btn-warning btn-sm" role="button">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun enregistrement trouv√©</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
