{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Parcelle{% endblock %}

{% block content %}
    <div class="container my-4">
        <h1 class="mb-4">Parcelle Details</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Parcelle Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ parcelle.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom</th>
                            <td>{{ parcelle.nom }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Superficie</th>
                            <td>{{ parcelle.superficie }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Localisation</th>
                            <td>{{ parcelle.localisation }}</td>
                        </tr>
                        <tr>
                            <th scope="row">TypeSol</th>
                            <td>{{ parcelle.typeSol }}</td>
                        </tr>
                        <tr>
                            <th scope="row">UtilisateurId</th>
                            <td>{{ parcelle.utilisateurId }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_parcelle_index') }}" class="btn btn-secondary">Back to List</a>
                    <div class="d-flex">
                        <a href="{{ path('app_parcelle_edit', {'id': parcelle.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div>
                            {{ include('parcelle/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
