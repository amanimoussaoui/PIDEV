{% extends 'BackEnd/back.html.twig' %}

{% block title %}Parcelle{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="glass-card shadow-sm border-0">
            <div class="card-header py-3 px-4" style="background: linear-gradient(90deg, #1a9738, #1F4E3D); border-radius: 12px 12px 0 0;">
                <h5 class="mb-0 text-white"></i> Détails de la Parcelle</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 justify-content-center">
                    {% set info = [
                        {'icon': 'tag-fill', 'label': 'Nom', 'value': parcelle.nom},
                        {'icon': 'rulers', 'label': 'Superficie', 'value': parcelle.superficie | number_format(2, ',', ' ') ~ ' m²'},
                        {'icon': 'geo-alt-fill', 'label': 'Localisation', 'value': parcelle.localisation},
                        {'icon': 'cloud-sun-fill', 'label': 'Type de Sol', 'value': parcelle.typeSol | capitalize}
                    ] %}

                    {% for item in info %}
                        <div class="col-md-3 col-6">
                            <div class="info-card p-3 text-center">
                                <div class="icon-box">
                                    <i class="bi bi-{{ item.icon }}"></i>
                                </div>
                                <h6 class="text-muted">{{ item.label }}</h6>
                                <p class="fw-bold mb-0">{{ item.value }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_parcelle_back') }}" class="btn btn-light">
                        <i class="bi bi-arrow-left"></i> Retour à la Liste
                    </a>
                    <form action="{{ path('app_parcelle_delete_back', {'id': parcelle.id}) }}" 
                    method="post" 
                    class="d-inline"
                    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette parcelle ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parcelle.id) }}">
                  <button type="submit" 
                          class="btn btn-danger btn-sm"
                          data-bs-toggle="tooltip"
                          title="Supprimer">
                      <i class="bi bi-trash"></i>
                  </button>
              </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
