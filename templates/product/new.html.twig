{% extends 'BackEnd/back.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block content %}
<style>
/* üé® Am√©lioration de l'affichage du formulaire */
.form-container {
    max-width: 600px;
    margin: auto;
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
}

/* üìù Style des labels */
.form-label {
    font-weight: 600;
    color: #218838;
}

/* üñäÔ∏è Style des champs de saisie */
.form-control, .form-select {
    border-radius: 8px;
    border: 1px solid #ddd;
    padding: 12px;
    font-size: 16px;
    transition: 0.3s;
}

/* üé® Effet au focus */
.form-control:focus, .form-select:focus {
    border-color: #218838;
    box-shadow: 0px 0px 5px rgba(33, 136, 56, 0.5);
}

/* üöÄ Style du bouton */
.btn-submit {
    background-color: #218838;
    color: white;
    font-size: 18px;
    padding: 12px;
    border-radius: 8px;
    border: none;
    width: 100%;
    transition: 0.3s;
}

.btn-submit:hover {
    background-color: #1a682c;
}

/* ‚úÖ Affichage des erreurs */
.form-error {
    color: red;
    font-size: 14px;
}

/* üé® Personnalisation du titre */
.custom-title {
    color: #4Cae4c; /* Couleur verte */
    font-family: 'Arial', sans-serif; /* Police moderne */
    font-weight: 700; /* Texte en gras */
    font-size: 28px; /* Taille du texte */
    text-transform: uppercase; /* Met en majuscule */
    letter-spacing: 2px; /* Espacement des lettres */
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2); /* Ombre du texte */
}

 </style>
<div class="container mt-4">
    <div class="form-container">
        <h2 class="mb-4 text-center custom-title">üõí Ajouter  produit</h2>


        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.nom, 'Nom du produit') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-box"></i></span>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.nom) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.description, 'Description') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.description) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.prix, 'Prix') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-euro-sign"></i></span>
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.prix) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.stock, 'Stock') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-boxes"></i></span>
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.stock) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.category, 'Cat√©gorie') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tags"></i></span>
                    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.category) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.image, "URL de l'image") }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.image) }}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.user, 'Utilisateur') }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="form-error">{{ form_errors(form.user) }}</div>
            </div>

            <button type="submit" class="btn btn-submit">Ajouter</button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
