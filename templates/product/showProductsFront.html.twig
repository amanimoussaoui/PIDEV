            <option value="Graines">Graines</option>
            <option value="Ã‰pices">Ã‰pices</option>
        </select>
        
<button type="submit" class="btn-primary">
            <i class="fas fa-search"></i> <!-- IcÃ´ne de loupe -->
        </button>
    </form>

    <div class="cards-container">
        {% if products is not empty %}
            {% for product in products %}
                <div class="card">
                    <img src="{{ product.image }}" alt="Image du produit" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nom }}</h5>
                        <p class="card-price"><strong>{{ product.prix }}DT</strong></p>
                        <p class="card-description"><strong>Description:</strong> {{ product.description }}</p>
                        <p class="card-category"><strong>CatÃ©gorie:</strong> {{ product.category }}</p>
