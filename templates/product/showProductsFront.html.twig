{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}
    <style>
        /* ðŸŽ¨ Style des cartes */
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-around;
        }

        .card {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background: white;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-price {
            color: #218838;
            font-size: 1.1rem;
        }

        .card-description {
            margin-top: 10px;
            font-size: 0.9rem;
            color: #555;
        }

        .card-category, .card-stock {
            font-size: 0.9rem;
            color: #444;
            margin-top: 5px;
        }

        .btn-primary {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 12px;
            border-radius: 5px;
            background-color: #218838;
            color: white;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #218838;
        }

        /* ðŸŽ¨ AmÃ©lioration du titre */
        h1 {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 30px;
            font-size: 3rem;
            font-weight: bold;
            color: #218838;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            padding: 15px 30px;
            border-radius: 12px;
            background-color: #eaf4e4;
        }

        h1:hover {
            color: #1a682c;
            transform: scale(1.05);
            transition: 0.3s ease;
            border: 3px solid #218838;
            padding: 12px 28px;
            background-color: #ffffff;
            text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.2);
        }

        /* ðŸŽ¨ Nouveau design du formulaire de recherche */
        .search-form {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #eaf4e4;
            padding: 8px 20px;
            border-radius: 50px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .search-form input {
            flex-grow: 1;
            padding: 12px 20px;
            border: 2px solid #ddd;
            border-radius: 50px;
            font-size: 16px;
            outline: none;
            background-color: #f8f8f8;
            transition: border-color 0.3s ease, background-color 0.3s ease;
        }

        .search-form input:focus {
            border-color: #218838;
            background-color: #ffffff;
        }

        .search-form select {
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 50px;
            background-color: #f8f8f8;
            font-size: 16px;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .search-form select:focus {
            border-color: #218838;
            background-color: #ffffff;
        }

        .search-form button {
            background-color: #218838;
            border: none;
            padding: 12px 20px;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .search-form button:hover {
            background-color: #1a682c;
            transform: scale(1.1);
        }

        .search-form button i {
            font-size: 20px;
        }
    </style>

    <h1>Nos Produits</h1>

    <!-- Formulaire de recherche -->
    <form method="GET" action="{{ path('product_search') }}" class="search-form">
        <select name="category">
            <option value="">Toutes les catÃ©gories</option>
            <option value="fruits">Fruits</option>
