{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}
    <style>
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-around;
        }

        .card {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background: white;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-price {
            color: #218838;
            font-size: 1.1rem;
        }

        .card-description {
            margin-top: 10px;
            font-size: 0.9rem;
            color: #555;
        }

        .card-category, .card-stock {
            font-size: 0.9rem;
            color: #444;
            margin-top: 5px;
        }

        .btn-primary {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 12px;
            border-radius: 5px;
            background-color: #218838;
            color: white;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #218838;
        }

       /* üé® Am√©lioration du titre */
/* üé® Style du titre */
h1 {
    text-align: center;
    margin-top: 50px;
    margin-bottom: 30px; /* Ajout d'un espace en bas du titre */
    font-size: 3rem; /* Augmentation de la taille du texte */
    font-weight: bold;
    color: #218838; /* Couleur verte */
    text-transform: uppercase; /* Met le texte en majuscules */
    letter-spacing: 2px; /* Espacement des lettres */
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* Ombre l√©g√®re */
    padding: 15px 30px; /* Ajout d'un espacement int√©rieur */
    border-radius: 12px; /* Bords arrondis pour un effet doux */
    background-color: #eaf4e4; /* Fond l√©ger pour le titre */
}

/* üé® Ajout d'un effet de survol pour le titre */
h1:hover {
    color: #1a682c; /* Changement de couleur au survol */
    transform: scale(1.05); /* L√©g√®re augmentation de la taille */
    transition: 0.3s ease; /* Effet de transition fluide */
    border: 3px solid #218838; /* Bordure verte au survol */
    padding: 12px 28px; /* R√©duction de l'espacement int√©rieur pour un effet plus dynamique */
    background-color: #ffffff; /* Changement du fond lors du survol */
    text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.2); /* Ombre plus marqu√©e */
}


    </style>

   
			 <h1>Nos Produits</h1>

    <div class="cards-container">
        {% if products is not empty %}
            {% for product in products %}
                <div class="card">
                    <img src="{{ product.image }}" alt="Image du produit" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nom }}</h5>
                        <p class="card-price"><strong>{{ product.prix }}DT</strong></p>
                        <p class="card-description"><strong>Description:</strong> {{ product.description }}</p>
                        <p class="card-category"><strong>Cat√©gorie:</strong> {{ product.category }}</p>
                        <p class="card-stock"><strong>Stock:</strong> {{ product.stock }}</p>
                        <a href="#" class="btn btn-primary">Commander </a>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>Aucun produit trouv√©.</p>
        {% endif %}
    </div>
			{% endblock %}
				

