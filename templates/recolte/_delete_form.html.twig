<form method="post" action="{{ path('app_recolte_delete', {'id': recolte.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recolte.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
