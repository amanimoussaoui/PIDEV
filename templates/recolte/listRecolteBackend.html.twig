{% extends 'BackEnd/back.html.twig' %}

{% block title %}Liste des Récoltes{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center py-4" 
                 style="background: linear-gradient(90deg, #1a9738, #1F4E3D);">
                <h5 class="card-title mb-0 text-white fw-semibold">Liste des Récoltes</h5>
            </div>
            
            <div class="card-body p-4">
                {# Search and Filter Form #}
                {{ form_start(form, {'attr': {'class': 'mb-5'}, 'action': path('app_recolte_back')}) }}
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="input-group input-group shadow-sm">
                                {{ form_widget(form.qualite, {
                                    'attr': {
                                        'class': 'form-select custom-select',
                                        'style': 'max-width: 150px;'
                                    }
                                }) }}
                                {{ form_widget(form.search, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Rechercher par nom de culture...',
                                    }
                                }) }}
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="bi bi-search"></i>
                                </button>
                                <a href="{{ path('app_recolte_back') }}" class="btn btn-light">
                                    <i class="bi bi-arrow-counterclockwise"></i> 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}

                {# Table Section #}
                <div class="table-responsive">
                    <table class="table modern-table align-middle">
                        <thead class="border-bottom">
                            <tr>
                                <th class="text-muted fw-semibold">#</th>
                                <th class="text-muted fw-semibold">
                                    <a href="{{ path('app_recolte_back', {
                                        'sort': 'dateRecolte',
                                        'direction': (sort == 'dateRecolte' and direction == 'ASC') ? 'DESC' : 'ASC'
                                    })}}" class="text-decoration-none text-muted d-flex align-items-center gap-2">
                                        Date Récolte 
                                        <i class="bi bi-sort-{{ sort == 'dateRecolte' and direction == 'ASC' ? 'down' : 'up' }}"></i>
                                    </a>
                                </th>
                                <th class="text-muted fw-semibold">
                                    <a href="{{ path('app_recolte_back', {
                                        'sort': 'quantite',
                                        'direction': (sort == 'quantite' and direction == 'ASC') ? 'DESC' : 'ASC'
                                    })}}" class="text-decoration-none text-muted d-flex align-items-center gap-2">
                                        Quantité (kg) 
                                        <i class="bi bi-sort-numeric-{{ sort == 'quantite' and direction == 'ASC' ? 'down' : 'up' }}"></i>
                                    </a>
                                </th>
                                <th class="text-muted fw-semibold">Qualité</th>
                                <th class="text-muted fw-semibold">
                                    <a href="{{ path('app_recolte_back', {
                                        'sort': 'prixUnitaire',
                                        'direction': (sort == 'prixUnitaire' and direction == 'ASC') ? 'DESC' : 'ASC'
                                    })}}" class="text-decoration-none text-muted d-flex align-items-center gap-2">
                                        Prix Unitaire (TND) 
                                        <i class="bi bi-sort-numeric-{{ sort == 'prixUnitaire' and direction == 'ASC' ? 'down' : 'up' }}"></i>
                                    </a>
                                </th>
                                <th class="text-muted fw-semibold">Culture</th>
                                <th class="text-muted fw-semibold">Parcelle</th>
                                <th class="text-muted fw-semibold">UtilisateurId</th>
                                <th class="text-muted fw-semibold text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for recolte in recoltes %}
                                <tr class="row-hover">
                                    <td>{{ recolte.id }}</td>
                                    <td>{{ recolte.dateRecolte ? recolte.dateRecolte|date('Y-m-d') : '' }}</td>
                                    <td>{{ recolte.quantite }}</td>
                                    <td>
                                        {% set badgeColors = {
                                            'Excellente': 'success',
                                            'Bonne': 'info',
                                            'Moyenne': 'warning',
                                            'Médiocre': 'danger',
                                            'Mauvaise': 'secondary'
                                        } %}
                                        <span class="badge rounded-pill bg-{{ badgeColors[recolte.qualite] ?? 'secondary' }}">
                                            {{ recolte.qualite | capitalize }}
                                        </span>
                                    </td>
                                    <td>{{ recolte.prixUnitaire }}</td>
                                    <td>{{ recolte.culture.nomCulture }}</td>
                                    <td>{{ recolte.culture.parcelle.nom }}</td>
                                    <td>{{ recolte.culture.parcelle.utilisateurId }}</td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="{{ path('app_recolte_show_back', {'id': recolte.id}) }}" 
                                               class="btn btn-info btn-sm"
                                               data-bs-toggle="tooltip"
                                               title="Voir les détails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form action="{{ path('app_recolte_delete_back', {'id': recolte.id}) }}" 
                                                  method="post" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette récolte ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recolte.id) }}">
                                                <button type="submit" 
                                                        class="btn btn-danger btn-sm"
                                                        data-bs-toggle="tooltip"
                                                        title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">
                                        <div class="alert alert-info border-0 shadow-sm rounded-4 mt-3">
                                            <i class="bi bi-info-circle me-2"></i>
                                            Aucune récolte trouvée. Essayez de modifier vos critères de recherche ou 
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}