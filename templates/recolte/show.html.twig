{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Recolte{% endblock %}

{% block content %}
    <div class="container my-4">
        <h1 class="mb-4">Recolte Details</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recolte Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ recolte.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date Recolte</th>
                            <td>{{ recolte.dateRecolte ? recolte.dateRecolte|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Quantite</th>
                            <td>{{ recolte.quantite }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Qualite</th>
                            <td>{{ recolte.qualite }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Prix Unitaire</th>
                            <td>{{ recolte.prixUnitaire }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Culture</th>
                            <td>{{ recolte.culture.nomCulture }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_recolte_index') }}" class="btn btn-secondary">Back to List</a>
                    <div class="d-flex">
                        <a href="{{ path('app_recolte_edit', {'id': recolte.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div>
                            {{ include('recolte/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}