{% extends 'FrontEnd/front.html.twig' %}

{% block title %}Modifier une Réservation{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="text-center">Modifier la Réservation</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
      

        <div class="mb-3">
            {{ form_label(form.date_debut, 'Date de début') }}
            {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date_debut) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.date_fin, 'Date de fin') }}
            {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date_fin) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}

        <a href="{{ path('reservation_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}
