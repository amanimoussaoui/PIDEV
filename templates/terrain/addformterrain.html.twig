{% extends 'BackEnd/back.html.twig' %}

{% block title %}AgriWise | Dashboard{% endblock %}

{% block content %}

    <style>
        /* Style du conteneur du formulaire */
        .form-container {
            background-color: #f5fff5; /* Vert clair */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 128, 0, 0.2); /* Ombre verte */
            max-width: 600px;
            margin: auto;
        }

        /* Titre */
        .form-container h1 {
            text-align: center;
            color: #2d6a4f; /* Vert foncé */
            margin-bottom: 20px;
        }

        /* Style des labels */
        .form-group label {
            font-weight: bold;
            color: #2d6a4f; /* Vert foncé */
            display: flex;
            align-items: center;
        }

        /* Icônes */
        .icon {
            color: #2d6a4f;
            margin-right: 10px;
        }

        /* Champs de formulaire */
        .form-control {
            border: 2px solid #2d6a4f; /* Bordure verte */
            border-radius: 8px;
            padding: 10px;
        }

        /* Effet sur les champs */
        .form-control:focus {
            border-color: #1b4332;
            box-shadow: 0 0 5px #1b4332;
        }

        /* Bouton Ajouter */
        .btn-green {
            background-color: #2d6a4f;
            border: none;
            color: white;
            font-size: 18px;
            padding: 8px;
            border-radius: 8px;
            display: block;
            width: 100%;
            transition: 0.3s;
        }

        /* Effet au survol */
        .btn-green:hover {
            background-color: #1b4332;
            color: white;
        }
    </style>

    <div class="container my-4">
        <div class="form-container">
            <h1><i class="fas fa-seedling"></i> Ajouter un terrain</h1>

            {{ form_start(formadd, {'attr': {'enctype': 'multipart/form-data'}}) }}
            
            {{ form_errors(formadd) }}

            <div class="form-group">
                <label for="{{ formadd.localisation.vars.id }}">
                    <i class="fas fa-map-marker-alt icon"></i> Localisation
                </label>
                {{ form_widget(formadd.localisation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.localisation) }}
            </div>

            <div class="form-group">
                <label for="{{ formadd.superficie.vars.id }}">
                    <i class="fas fa-ruler-combined icon"></i> Superficie (m²)
                </label>
                {{ form_widget(formadd.superficie, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.superficie) }}
            </div>

            <div class="form-group">
                <label for="{{ formadd.prix.vars.id }}">
                    <i class="fas fa-dollar-sign icon"></i> Prix (TND)
                </label>
                {{ form_widget(formadd.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.prix) }}
            </div>

            <div class="form-group">
                <label for="{{ formadd.description.vars.id }}">
                    <i class="fas fa-align-left icon"></i> Description
                </label>
                {{ form_widget(formadd.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.description) }}
            </div>

            <div class="form-group">
                <label for="{{ formadd.image.vars.id }}">
                    <i class="fas fa-image icon"></i> Image
                </label>
                {{ form_widget(formadd.image, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.image) }}
            </div>

            <div class="form-group">
                <label for="{{ formadd.username.vars.id }}">
                    <i class="fas fa-user icon"></i> Nom de l'utilisateur
                </label>
                {{ form_widget(formadd.username, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formadd.username) }}
                 
            </div>

            <button type="submit" class="btn-green"><i class="fas fa-plus-circle"></i> Ajouter</button>

            {{ form_end(formadd) }}
        </div>
    </div>

    <!-- FontAwesome pour les icônes -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

{% endblock %}
