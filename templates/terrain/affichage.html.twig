{% extends 'FrontEnd/front.html.twig' %}

{% block title %}AgriWise | Accueil{% endblock %}

{% block content %}
    <style>
        body {
            background-color: #f4f7fc;
        }

        .container {
            max-width: 1200px;
        }

        h1 {
            color: #B1D182;
            font-size: 2.5rem;
            margin-bottom: 20px;
            animation: fadeIn 1s ease-out;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.2);
        }

        .card img {
            height: 200px;
            object-fit: cover;
            border-bottom: 2px solid #B1D182;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            font-size: 1rem;
            color: #666;
        }

        .price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #B1D182;
        }

        .btn-details {
            background-color: #B1D182;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }

        .btn-details:hover {
            background-color: #9ABD72;
        }

        /* Animation de fade-in */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>

    <div class="container my-5">
        <h1>Découvrir Les Offres</h1>
        <div class="row">
            {% for a in tab_terrain %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        {% if a.image %}
                            <img src="{{ a.image }}" class="card-img-top" alt="Image du terrain">
                        {% else %}
                            <img src="https://via.placeholder.com/300x200?text=Pas+d'image" class="card-img-top" alt="Pas d'image">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ a.localisation }}</h5>
                            <p class="card-text">Superficie: {{ a.superficie }} m²</p>
                            <p class="price">{{ a.prix }} TND</p>
                            <td>
                                <a href="{{ path('app_affichage_terrain', {'id': a.id}) }}" class="btn btn-success">Voir Détails</a>


                        </td>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
